<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="#D3D3D3"
        >
        <ImageView
            android:id="@+id/galleryPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="로고"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/border"
            >
        </ImageView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="10dp"
        android:text="보는데에 불편함을 느끼시는 색을 선택해주세요!"
        android:textColor="#776A6A"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/redCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FDFDFD"
                android:layout_marginLeft="18dp">
            </CheckBox>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="적색"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp">
            </TextView>



            <CheckBox
                android:id="@+id/greenCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FDFDFD">
            </CheckBox>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="녹색"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp">
            </TextView>

            <CheckBox
                android:id="@+id/blueCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FDFDFD">
            </CheckBox>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="청색"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp">
            </TextView>

            <CheckBox
                android:id="@+id/allCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FDFDFD">
            </CheckBox>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="모두 선택"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="패턴화 할 pdf 선택하기"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:backgroundTint="#353030">
    </Button>


</LinearLayout>